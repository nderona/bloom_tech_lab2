@model BloomTech.Models.Contact
<head>
    <link href="/css/contact.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>

<div class="bg-contact100" style="background-image: url('https://images.pexels.com/photos/4041287/pexels-photo-4041287.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
    
    <div class="container-contact100">

        <div class="wrap-contact100">
            <h1 class="" style="width:100%; text-align:center; margin: 0px 0px 25px 0px; letter-spacing:10px">GET IN TOUCH</h1>
            <div class="contact100-pic">
                <img src="/images/Contact/img-01.png" alt="IMG">
            </div>

            <form class="contact100-form validate-form" method="post" asp-controller="Contact" asp-action="ContactUs">


                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <input class="input100" asp-for="FullName"  placeholder="Name">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>

                </div>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" asp-for="Email"  placeholder="Email">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <textarea class="input100" asp-for="Message" placeholder=" Message"></textarea>
                    <span class="focus-input100"></span>
                </div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
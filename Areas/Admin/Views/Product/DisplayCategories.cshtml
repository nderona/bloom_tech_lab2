@model List<Category>

@{
    ViewData["Title"] = "Manage Categories";
}
<main>
    <div class="container">
        <div class="container" style="width:70%">
            <h1 class="title"> ADD NEW CATEGORY</h1>
            <form style="display:flex; flex-direction:column;  align-items:center" action="CreateNewCategory" method="post">
                <div class="form-group">
                    <label style="font-size:20px" for="formGroupExampleInput">Category name</label>
                    <input class="form-control" style="width:400px; height:50px; border: 1px solid #202528" type="text" name="categoryName" />
                </div>
                <div class="form-group">
                    <input class="btn btn-secondary" type="submit" name="submit" value="Add" />
                </div>
            </form>
        </div>
        

        <div class="container" style="width:70%">
            <h1 class="title">MANAGE CATEGORY</h1>
            <table class="table table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var category in Model) {
                        <tr>
                            <td>@category.Name</td>
                            <td><a class="btn btn-danger" asp-controller="Product" asp-action="RemoveCategory" asp-route-categoryId="@category.Id">Remove</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
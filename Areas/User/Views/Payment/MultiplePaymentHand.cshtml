@model UserInformationViewModel

    <head>
        <link href="~/css/Payment.css" rel="stylesheet" />
    </head>

<h1 style="width:100%; display:flex; justify-content:center; margin:1em 0px; letter-spacing:0.3em; background-color:#fefeff">MULTIPLE PAYMENT IN CASH</h1>
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-12">
            <div class="card mx-auto">
                <p class="heading">PAYMENT DETAILS</p>
                <form class="form card-details" asp-action="MultiplePaymentHand" method="post">
                    <input type="hidden" asp-for="@Model.CouponId" />
                    <div class="form-group mb-0">
                        <p class="text-warning mb-0">City</p>
                        <input asp-for="@Model.City" class="form-control" placeholder="Address 1" />
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p class="text-warning mb-0">Address 1</p>
                        <input asp-for="@Model.Address1" class="form-control" placeholder="Address 1" />
                        <span asp-validation-for="@Model.Address1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p class="text-warning mb-0">Address 2</p>
                        <input asp-for="@Model.Address2" class="form-control" placeholder="Address 2" />
                        <span asp-validation-for="@Model.Address2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p class="text-warning mb-0">Phone Number</p>
                        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone number" />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn" style="color:white" id="card-button">Submit</button>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>